<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#224c76"
    tools:context="codeitstudio.fireapp.com.fireapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meters_to_inches_calculator"
        android:id="@+id/text"
        android:fontFamily="serif-monospace"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002"
        app:layout_constraintHorizontal_bias="0.0" />
    <EditText
        android:id="@+id/entertext"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif-monospace"
        app:layout_constraintTop_toTopOf="@+id/text"
        android:textSize="20sp"
        android:inputType="number"
        android:textStyle="bold"
        android:hint="@string/enter_the_measure_in_meters"
        app:layout_constraintVertical_bias="0.365"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
<Button
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/btn"
    android:background="#fcee88"
    android:fontFamily="serif-monospace"
    android:text="@string/convert_from_meters"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:textStyle="bold"
    app:layout_constraintTop_toBottomOf="@+id/entertext"
    app:layout_constraintVertical_bias="0.219"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif-monospace"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Display the measurement here....."
        app:layout_constraintTop_toBottomOf="@+id/btn"
        app:layout_constraintVertical_bias="0.363"
        app:layout_constraintHorizontal_bias="0.501" />
</android.support.constraint.ConstraintLayout>
